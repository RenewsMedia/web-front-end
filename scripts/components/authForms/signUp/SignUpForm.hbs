<form name="sign-up">
    <div>
        <label>
            Login:<br />
            <input type="text" name="login" />
        </label>
    </div>

    <div>
        <label>
            Password:<br />
            <input type="password" name="password" />
        </label>
    </div>

    <div>
        <label>
            Name:<br />
            <input type="text" name="name" />
        </label>
    </div>

    <div>
        <label>
            Surname:<br />
            <input type="text" name="surname" />
        </label>
    </div>

    <div>
        <label>
            Mail:<br />
            <input type="text" name="mail" />
        </label>
    </div>

    <div>
        Country:<br />
        <div data-region="countries"></div>
    </div>

    <div>
        <button type="submit">Sign up</button>
        <a href="/sign/in">Sign in</a>
    </div>
</form>